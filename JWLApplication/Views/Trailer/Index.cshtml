@model IEnumerable<Models.trailer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <style>
        .dt-buttons {
            display: none;
        }
    </style>
<div class="page-content">
    <!-- content header-->
    <div class="content-header">
        <div class="row h-60 align-items-center">
            <div class="col-lg-6">
                <div class="p-title">
                    <h2>Trailer Types</h2>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="right-button-box">
                    <a asp-action="Create" class="btn btn-primary">Add New</a>
                </div>
            </div>
        </div>
    </div>
    <div class="wt-box">
        <table class="table" id="example" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Trailer Types
                    </th>
                    <th>
                        Active?
                    </th>
                    <th class="action-column">Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Trailer Types</th>
                    <th>Active?</th>
                    <th style="display:none;width:10%">Actions</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.trailerName)
                        </td>
                        <td>
                            @{
                                if (item.isActive == true)
                                {
                                    <label>Active</label>
                                }
                                else
                                {
                                    <label>In Active</label>
                                }
                            }
                        </td>
                        <td>
                            <a class="edit-action" asp-action="Edit" asp-route-id="@item.trailerId"><i class="fa fa-pencil font-20" aria-hidden="true"></i></a>
                            <a class="delete-action" onclick="DeleteState('@item.trailerId');"><i class="fa fa-trash  font-20" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function DeleteState(id) {
            var r = confirm("Are you sure you want to delete Trailer?");
            if (r == true) {
                $.ajax({
                    url: "/Trailer/Delete",
                    data: {
                        id: id
                    },
                    dataType: "json",
                    type: 'POST',
                    success: function (result) {
                        if (result == "delete") { var win = window.open("/users/login", "_self"); return;}
                        alert(result);
                        location.reload(true);
                    }
                });
            } else {
                txt = "You pressed Cancel!";
            }
        }
        $('#idMasterData').addClass("active");
        $('#idTrailerType').addClass("active");
    </script>
}